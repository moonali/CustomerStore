@model WebApplication2.ViewModel.RegisterViewModelcs

@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="card shadow-sm mb-5 bg-white rounded">
        <div class="card-header">
            <h3>Register</h3>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-3"></div>
                    <div class="col-md-6">
                        <form asp-action="Register">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Emial" class="control-label"></label>
                                <input asp-for="Emial" class="form-control" />
                                <span asp-validation-for="Emial" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="control-label"></label>
                                <input asp-for="ConfirmPassword" class="form-control" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-action="AllUser">Back to List</a>
                </div>
            </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
